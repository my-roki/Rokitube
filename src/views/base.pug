doctype html
html(lang="ko")
  head
    link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    title #{pageTitle} | Youtube Clone
  body
    header 
      if fakeUser.isLogin 
        small Hello! #{fakeUser.username}
      nav 
        ul 
          if fakeUser.isLogin  
            li 
              a(href="/users/logout") Logout 
          else 
            li 
              a(href="/login") Login
      h1=pageTitle

    main 
      block content
    
    include partials/footer.pug