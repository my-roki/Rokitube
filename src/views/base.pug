doctype html
html(lang="ko")
  head
    link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    title #{pageTitle} | Youtube Clone
  body
    header 
      if isLogin 
        small Hello! #{loginUser.username}
      nav 
        ul 
          li 
            a(href="/") HOME
          li 
            a(href="/search") Search
          if isLogin  
            li 
              a(href="/videos/upload") Upload Video
            li 
              a(href="/users/logout") Logout
            li 
              a(href=`/users/${loginUser._id}`) Profile
            
          else 
            li 
              a(href="/login") Sign in
            li 
              a(href="/join") Sign up


      h1=pageTitle

    main 
      block content
    
    include partials/footer.pug