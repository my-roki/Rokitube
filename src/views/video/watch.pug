extends ../base.pug

block content 
  video(src=`/${video.videoUrl}`, controls)
  div
    p=video.description
    small=video.createdAt
  a(href=`${video.id}/edit`) Edit Video &rarr;
  br
  a(href=`${video.id}/delete` onclick="return confirm('Are you sure you want to delete this?')") Delete Video &rarr;

  