extends ../base.pug
include ../mixin/video.pug

block content 
  div.video-section
    div.video-section__first
      div(data-id=video._id)#videoContainer
        if(video.videoUrl.startsWith("upload"))
          video(src=`/${video.videoUrl}`)
        if(video.videoUrl.startsWith("http"))
          video(src=video.videoUrl)
        div#videoController.videoController
          div.videoController__play
            span#play.videoController__playButton
              i.fas.fa-play
            div.videoController__time
              span#currentTime 00:00
              span  / 
              span#totalTime 00:00
          input(type="range",value=0, min="0", step="1")#timeline
          
          div.videoController__volume
            input(type="range",value=0.3, min="0", max="1", step="0.01")#volume
            span#mute
              i.fas.fa-volume-up 
          div 
            span#fullscreen
              i.fas.fa-expand

      div.video__data
        p.video__title=video.title
        small.video__createdAt=new Date(video.createdAt).toLocaleDateString("ko-kr", {weekday: 'long', year: 'numeric', month: 'long', day: 'numeric'})
        small.video__owner Uploaded by 
          a(href=`/users/${video.owner._id}`) #{video.owner.username}

      - const ownerCorrect = String(video.owner._id) === String(loginUser._id)
      if ownerCorrect
        div.video__handleButton
          a(href=`${video.id}/edit`) Edit Video &rarr;
          br
          a(href=`${video.id}/delete` onclick="return confirm('Are you sure you want to delete this?')") Delete Video &rarr;

      if isLogin
        div.video__add__comment
          form#comment-form.comment-form.nform 
            textarea(cols="1000", rows="3", placeholder="Write a comment")#textarea
            button Add Comment

      div#video-comments.video-comments 
        ul
          each comment in video.comments.reverse()
            li(data-id=comment._id).video-comments__comment
              div.video-comments__payloads
                img(src=comment.owner.avatar)
                div
                  span=comment.owner.username
                  span.video-comments__createdAt=comment.createdAtFromNow
                  h3=comment.text
                  div.comment__like
                    i.far.fa-thumbs-up
                    i.far.fa-thumbs-down
                    span report
                    
              if String(loginUser._id) === String(comment.owner._id)
                div(name="handleComment").comment__menu
                  span
                    i.fas.fa-pen
                  span
                    i.fas.fa-trash-alt

    div.video-section__second
      span.recommand Recommand Videos
      each video in videos
          +video(video)



block scripts 
  script(src="/static/js/videoPlayer.js") 
  if isLogin
    script(src="/static/js/commentSection.js") 
  
