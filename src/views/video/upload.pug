extends ../base.pug

block content 
  div
    video#preview
    button#recordStartButton Start Recording 
    button#recordDownloadButton Download
  if errMessage 
    span=errMessage
  form(method="POST", enctype="multipart/form-data")
    label(for="video") Video
      input(id="video", name="video", type="file", accept="video/*", required)
    input(placeholder="Title", required, type="text", name="title", maxlength=80)
    input(placeholder="Description", required, type="text", name="description", minlength=20)
    input(placeholder="Hashtags, separated by whitespace.", required, type="text", name="hashtags")
    input(type="submit", value="Upload Video")
block scripts
  script(src="/static/js/recorder.js") 